<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gris_oscuro"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="32dp">

    <ImageView
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:layout_marginBottom="40dp"
        android:src="@drawable/estilo_al_paso_logo" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/loginUsuarioLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Usuario"
        app:boxBackgroundColor="@color/gris_very_dark"
        app:boxBackgroundMode="filled"
        app:boxStrokeColor="@color/dorado"
        app:hintTextColor="@color/dorado">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/loginUsuarioInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:textColor="@color/white" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/loginPasswordLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:hint="ContraseÃ±a"
        app:boxBackgroundColor="@color/gris_very_dark"
        app:boxBackgroundMode="filled"
        app:boxStrokeColor="@color/dorado"
        app:endIconMode="password_toggle"
        app:hintTextColor="@color/dorado">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/loginPasswordInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:textColor="@color/white" />
    </com.google.android.material.textfield.TextInputLayout>

    <Button
        android:id="@+id/btnIngresar"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_marginTop="32dp"
        android:backgroundTint="@color/dorado"
        android:text="Ingresar"
        android:textColor="@color/gris_oscuro"
        android:textStyle="bold"
        app:cornerRadius="12dp" />

    <ProgressBar
        android:id="@+id/loginProgress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:visibility="gone" />

</LinearLayout>