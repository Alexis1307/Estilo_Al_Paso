<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gris_oscuro">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:padding="32dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="32dp"
            android:text="Registrar Administrador"
            android:textColor="@color/dorado"
            android:textSize="22sp"
            android:textStyle="bold" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/regAdminNombreLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nombre de usuario"
            app:boxBackgroundColor="@color/gris_very_dark"
            app:boxBackgroundMode="filled"
            app:boxStrokeColor="@color/dorado"
            app:hintTextColor="@color/dorado">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/regAdminNombreInput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:textColor="@color/white" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/regAdminPasswordLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:hint="ContraseÃ±a"
            app:boxBackgroundColor="@color/gris_very_dark"
            app:boxBackgroundMode="filled"
            app:boxStrokeColor="@color/dorado"
            app:endIconMode="password_toggle"
            app:hintTextColor="@color/dorado">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/regAdminPasswordInput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                android:textColor="@color/white" />
        </com.google.android.material.textfield.TextInputLayout>

        <Button
            android:id="@+id/btnRegistrarAdmin"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_marginTop="32dp"
            android:backgroundTint="@color/dorado"
            android:text="Crear Administrador"
            android:textColor="@color/gris_oscuro"
            android:textStyle="bold"
            app:cornerRadius="12dp" />

        <ProgressBar
            android:id="@+id/regAdminProgress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:visibility="gone" />
    </LinearLayout>
</ScrollView>