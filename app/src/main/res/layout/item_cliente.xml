<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="2dp"
    app:cardBackgroundColor="@color/gris_very_dark">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginLeft="14dp"
            android:layout_gravity="center_vertical">

            <TextView
                android:id="@+id/nameCliente"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Juan PÃ©rez"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:textStyle="bold"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/telefonoCliente"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="948 123 456"
                    android:textColor="#B3FFFFFF"
                    android:textSize="13sp"/>

                <TextView
                    android:id="@+id/ciudadCliente"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="  -  Trujillo"
                    android:textColor="#B3FFFFFF"
                    android:textSize="13sp"/>
            </LinearLayout>

        </LinearLayout>

        <TextView
            android:id="@+id/estadoFinanciero"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="PAGADO"
            android:textColor="#4CAF50"
            android:textSize="11sp"
            android:textStyle="bold"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:paddingTop="6dp"
            android:paddingBottom="6dp"
            android:layout_gravity="center_vertical"/>

    </LinearLayout>
</androidx.cardview.widget.CardView>